{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "typeRoots": [
    "./node_modules/@types",  // Default types folder
    "./"                       // Add root for your custom types
  ],
  "include": [
    "src/**/*.ts",       // Include your source files
    "types.d.ts"         // Explicitly include your custom type definitions file
  ]
}
